# TuneFlow Backend Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Backend URL for CORS
ALLOWED_ORIGINS=chrome-extension://*,http://localhost:3000,http://localhost:3001

# Output Directory
OUTPUT_DIR=./downloads

# Redis Configuration (optional, for job queue)
REDIS_URL=redis://localhost:6379

# Spotify API Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3000/callback

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/tuneflow.log

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# High-Res Sources API Keys (for future Lucida integration)
# LUCIDA_API_KEY=your_lucida_api_key
# DEEZER_API_KEY=your_deezer_api_key
# TIDAL_API_KEY=your_tidal_api_key
# QOBUZ_API_KEY=your_qobuz_api_key

# Audio Processing
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=300000

# File Management
MAX_FILE_SIZE=100MB
CLEANUP_INTERVAL=86400000

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here